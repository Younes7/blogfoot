<%include ./partials/header%>
<div class="container">
  <div class="rows">
    <div class="col-md">
    <h1><strong>Liste des articles</strong></h1>
    </div>
    <div class="rows">
    <table class="table table-striped table-bordered">
      <thead>
        <th>Titre</th>
        <th>Auteur</th>
        <th>Voir</th>
        <th>Modifier</th>
        <th>Supprimer</th>
        <th>Poster</th>
      </thead>
      <% home.forEach(function(home){ %>
        <tr>
          <td><%= home.title %></td>
          <td><%= home.writer %></td>
          <td><a class="btn btn-info" href="/post/voir/<%=home.id%>">Voir</a></td>
          <td><a class="btn btn-warning" href="/liste/modifier/<%=home.id%>">Modifier</a></td>
          <td><form action="/liste/suppr/<%=home.id%>" method="post">
            <input type="hidden" name="_method" value="delete"/>
            <button type="submit" class="btn btn-danger">Supprimer</button>
              </form>
          </td>
          <% if(home.posted === 0){ %>
          <td width=300>
            <form action="/liste/visible/<%=home.id%>" method="post">
              <button type="submit" class="btn btn-danger"> NON PUBLIC</button>
            </form>
            <% } else{ %>
          </td>
          <td>
            <form action="/liste/invisible/<%=home.id%>" method="post">
              <button type="submit" class="btn btn-success">PUBLIC</button>
            </form>
          </td>
        </tr>
        <% } %>
        <%}) %>
      </table>
    </div>
  </div>
</div>
