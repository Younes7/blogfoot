<%include ./partials/header%>
<% home.forEach(function(item){ %>
<div class="container">
  <div class="row">
    <form action="/liste/modifier/<%=item.id%>" method="post">
      <input type="hidden" name="_method" value="PUT"/>
      <div>
        <h2>Modifier</h2>
        <label for="title"></label><br>
        <input type="text" name="title" id="title" value="<%= item.title %>">
      </div>

      <div class="col-sm-12">
        <label for="description">Decription</label><br>
        <input type="description" name="description" id="description" value="<%= item.description %>">
      </div>

      <div>
        <label for="content"></label><br>
        <textarea name="content" id="content" rows="8" cols="80"><%= item.content %></textarea>
      </div>

      <div>
        <label for="writer">Writer</label><br>
        <input type="text" name="writer" id="writer" value="<%= item.writer %>">
      </div>

      <div class="col-sm-12">
        <label for="image">image</label><br>
        <input type="file" name="image" id="image" value="public/img/upload/img_<%= item.image %>">
      </div><br>

      <div>
        <button class="btn btn-danger" type="submit">MODIFIER</button>
      </div>

    </form>
  </div>
</div>
<%}) %>
<%include ./partials/footer%>
