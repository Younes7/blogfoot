<%include ./partials/header%>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Paramètres</h2>
    </div>
  </div>
</div>
<hr>
<div class="container">
  <div class="row">
    <div class="col-md-6"><h4>Modérateur</h4>
      <table class="table">
        <thead class="thead-inverse">
          <th>Nom</th>
          <th>Actions</th>
        </thead>
        <% parametre.forEach(function(item){ %>
        <tr>
          <td><%= item.name%></td>
          <td width=300>
            <form action="/parametre/suppr/<%=item.id%>" method="post">
              <input type="hidden" name="_method" value="delete"/>
              <button type="submit" class="btn btn-danger">Supprimer</button>
            </form>
          </td>
        </tr>
        <%}) %>
      </table>
    </div>
    <div class="col-md-6">
      <h4>Ajouter un modérateur</h4>
      <form method="post" action="/parametre">
        <div class="row">
          <div class="col-sm-12">
            <label for="name">Nom</label><br>
            <input type="text" name="name" id="name">
          </div>
          <div class="col-sm-12">
            <label for="password">Mot de passe</label><br>
            <input type="password" name="password" id="password">
          </div>
          <br>
          <div class="col-sm-12">
            <br><br>
            <button class="btn btn-danger" type="submit" name="button">Ajouter</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<%include ./partials/footer%>
